      display: flex;
      align-items: center;
      justify-content: center;
    }

    .loader-screen {
      position: absolute;
      background: #000;
      width: 100%;
      height: 100%;
      z-index: 10;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      animation: fadeOut 1s ease forwards;
      animation-delay: 2.5s;
    }

    .loader-screen.hidden {
      display: none;
    }

    .spinner, .dot-spinner {
      border: 6px solid #333;
      border-top: 6px solid #0ff;
      border-radius: 50%;
      width: 30px;
      height: 30px;
      animation: spin 1s linear infinite;
      margin-right: 10px;
    }

    .spinner {
      width: 60px;
      height: 60px;
      margin-bottom: 15px;
    }

    @keyframes spin {
      to {
        transform: rotate(360deg);
      }
    }

    @keyframes fadeOut {
      to {
        opacity: 0;
        visibility: hidden;
      }
    }

    .login-container {
      background: #1a1a1a;
      padding: 40px;
      box-shadow: 0 0 20px rgba(0,255,255,0.2);
      width: 350px;
      display: flex;
      flex-direction: column;
      gap: 20px;
      z-index: 1;
    }

    .login-container h2 {
      text-align: center;
      margin-bottom: 10px;
