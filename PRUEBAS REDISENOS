<body>

  <!-- Pantalla de carga inicial -->
  <div class="loader-screen" id="loaderScreen">
    <div class="spinner"></div>
    <div class="loader-text">Iniciando...</div>
  </div>

  <!-- Formulario de login -->
  <div class="login-container" id="loginForm">
    <h2>Iniciar Sesión</h2>
    <input type="text" id="usuario" placeholder="Usuario" />
    <input type="password" id="contrasena" placeholder="Contraseña" />
    <button class="login-button" onclick="validarLogin()">LOGIN</button>
    <div class="error-msg" id="errorMsg"></div>
  </div>

  <!-- Capa de frases -->
  <div class="overlay" id="overlay"></div>

  <script>
    // Ocultar pantalla de carga inicial
    window.onload = function () {
      setTimeout(() => {
        document.getElementById("loaderScreen").classList.add("hidden");
      }, 2500);
    };

    async function validarLogin() {
      const user = document.getElementById('usuario').value.trim();
      const pass = document.getElementById('contrasena').value.trim();
      const error = document.getElementById('errorMsg');
      const overlay = document.getElementById('overlay');

      error.textContent = "";

      if (!user || !pass) {
        error.textContent = "Usuario y contraseña inválidos";
        return;
      }

      overlay.style.display = "flex";
      overlay.innerHTML = "";

      const mensajes = [
        "Descargando recursos...",
        "Conectando con el servidor..."
      ];

      for (let i = 0; i < mensajes.length; i++) {
        const contenedor = document.createElement("div");
        contenedor.classList.add("mensaje");

        const spinner = document.createElement("div");
        spinner.classList.add("dot-spinner");

        const texto = document.createElement("span");
        texto.textContent = mensajes[i];

        contenedor.appendChild(spinner);
        contenedor.appendChild(texto);
        overlay.appendChild(contenedor);

        await new Promise(resolve => setTimeout(resolve, 1300));
        spinner.outerHTML = `<span class="check">✔️</span>`;

        await new Promise(resolve => setTimeout(resolve, 700));

        contenedor.style.opacity = 0;
        contenedor.style.transform = "translateY(-10px)";
        await new Promise(resolve => setTimeout(resolve, 300));
      }

      // Mostrar mensaje final
      const final = document.createElement("div");
      final.classList.add("mensaje-final");
      final.textContent = "¡Bienvenido!";
      overlay.appendChild(final);

      const nombre = document.createElement("div");
      nombre.classList.add("nombre-usuario");
      nombre.textContent = user;
      overlay.appendChild(nombre);
    }
  </script>
</body>
</html>
